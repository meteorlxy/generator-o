{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": false,
    "module": "commonjs",
    "newLine": "lf",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017",
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "generators",
    "declarationDir": "types"
  },
  "include": ["src/**/*.ts"]
}
